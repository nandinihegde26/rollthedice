import random
def diceroll():
   choices = ["1", "2" , "3","4","5","6"]
   return random.choice(choices)
def main():
    while True:
      print("roll the dice :")
      roll = diceroll()
      print(f"the number arrived {roll}\n")
      user=input("do you want to continue this ?? (y/n)\n").strip().lower()
      if  user !='y':
        print ("\t\t\t\t:THE END:\n")
        break


if __name__ == "__main__":
    main()
